# Ghostty colorscheme for hubbamax
# Based on the hubbamax.nvim Neovim colorscheme
# Author: Alexandre Pasmantier <alex.pasmant@gmail.com>

# Background and foreground
background = #1c1c1c
foreground = #bcbcbc

# Cursor colors
cursor-color = #bcbcbc
cursor-text = #000000

# Selection colors
selection-background = #87afaf
selection-foreground = #1c1c1c

# Terminal ANSI colors (0-15)
# Black (0 and 8)
palette = 0=#1c1c1c
palette = 8=#767676

# Red (1 and 9)
palette = 1=#af5f5f
palette = 9=#d75f87

# Green (2 and 10)
palette = 2=#5faf5f
palette = 10=#87d787

# Yellow (3 and 11)
palette = 3=#af875f
palette = 11=#d7af87

# Blue (4 and 12)
palette = 4=#5f87af
palette = 12=#5fafd7

# Magenta (5 and 13)
palette = 5=#af87af
palette = 13=#d787d7

# Cyan (6 and 14)
palette = 6=#5f8787
palette = 14=#87afaf

# White (7 and 15)
palette = 7=#9e9e9e
palette = 15=#bcbcbc
